<!DOCTYPE html>
<html lang="en">

<head>

    <title>Formulario Datos Cliente</title>
    <link rel="stylesheet" href="/styles/forma.css">

    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
</head>

<body>

    <div class="titulo">
        <p class="titulo__texto">Revision de datos</p>
    </div>

    <article class="contenido">
        <div class="contenido--carrito">
            <h2 class="contenido__titulo">Carrito</h2>
            <ul class="carrito-desplegado__lista"></ul>
        </div>


        <div class="contenido--forma">
            <form id="msform" action="/adopciomexitosa" method="POST">
                <!-- progressbar -->
                <ul id="progressbar">
                    <li class="active">Datos Personales></li>
                    <li>Social Profiles</li>
                    <li>Personal Details</li>
                </ul>
                <!-- fieldsets -->
                <fieldset>
                    <h2 class="fs-title">Medio de Pago</h2>
                    <input type="text" name="email" placeholder="Email" />
                    <input type="text" name="tarjeta" placeholder="Tarjeta" />
                    <input type="text" name="cvv" placeholder="cvv" />
                    <input type="button" name="next" class="next action-button" value="Next" />
                </fieldset>
                <fieldset>
                    <h2 class="fs-title">Lugar de vivienda</h2> 
                    <input type="text" name="ciudad" placeholder="Ciudad" />
                    <input type="text" name="estado" placeholder="Estado" />
                    <input type="text" name="pais" placeholder="Pais" />
                    <input type="button" name="previous" class="previous action-button" value="Previous" />
                    <input type="button" name="next" class="next action-button" value="Next" />
                </fieldset>
                <fieldset>
                    <h2 class="fs-title">Informacion Personal</h2>
                    <input type="text" name="fname" placeholder="Nombre" />
                    <input type="text" name="lname" placeholder="Apellido" />
                    <input type="text" name="phone" placeholder="Numero telefonico" />
                    <textarea name="address" placeholder="Direccion"></textarea>
                    <input type="button" name="previous" class="previous action-button" value="Previous" />
                    <input type="submit" name="submit" class="submit action-button" value="Submit" />
                    <input class="input-productos" type="hidden" name="productos" value="">
                </fieldset>


            </form>
        </div>
    </article>
    <!-- multistep form -->

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js'></script>
    <script src="/scripts/forma.js"></script>
</body>

</html>